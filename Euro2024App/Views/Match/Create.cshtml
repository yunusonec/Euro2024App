@using EntityLayer.Concrete
@model Euro2024App.Models.MatchModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Maç Ekle</h1>
<div class="container">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="HomeTeamId" class="control-label"></label>
            <select asp-for="HomeTeamId" class="form-control">
                <option value="">Ev Sahibi Takımı Seçin</option>
                @if (ViewBag.HomeTeams != null)
                {
                    @foreach (var team in ViewBag.HomeTeams as List<Team>)
                    {
                        <option value="@team.TeamId">@team.Name</option>
                    }
                }
                else
                {
                    <option value="">Takımlar Yüklenemedi</option>
                }
            </select>
            <span asp-validation-for="HomeTeamId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AwayTeamId" class="control-label"></label>
            <select asp-for="AwayTeamId" class="form-control">
                <option value="">Misafir Takımı Seçin</option>
                @if (ViewBag.AwayTeams != null)
                {
                    @foreach (var team in ViewBag.AwayTeams as List<Team>)
                    {
                        <option value="@team.TeamId">@team.Name</option>
                    }
                }
                else
                {
                    <option value="">Takımlar Yüklenemedi</option>
                }
            </select>
            <span asp-validation-for="AwayTeamId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HomeTeamGoals" class="control-label"></label>
            <input asp-for="HomeTeamGoals" class="form-control" type="number" />
            <span asp-validation-for="HomeTeamGoals" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AwayTeamGoals" class="control-label"></label>
            <input asp-for="AwayTeamGoals" class="form-control" type="number" />
            <span asp-validation-for="AwayTeamGoals" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Ekle" class="btn btn-primary" />
        </div>
    </form>
</div>