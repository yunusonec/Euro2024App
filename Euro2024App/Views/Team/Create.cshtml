@using EntityLayer.Concrete
@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Takım Ekle</h1>
<div class="container">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhotoUrl" class="control-label"></label>
            <input asp-for="PhotoUrl" class="form-control" />
            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CoachId" class="control-label"></label>
            <select asp-for="CoachId" class="form-control" asp-items="ViewBag.CoachList">
                <option value="">Select Coach</option>
            </select>
            <span asp-validation-for="CoachId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>